<?xml version="1.0" encoding="iso-8859-1"?>
<Configuration status="WARN">
<Appenders>
    <Console name="Console" target="SYSTEM_OUT">
        <PatternLayout pattern="[%d{HH:mm:ss}] [%t/%p]: %msg%n"/>
    </Console>
</Appenders>
<Loggers>
    <Logger name="is.yarr.qilletni.toolchain" level="debug" additivity="false">
        <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="is.yarr.qilletni.docgen" level="debug" additivity="false">
        <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="is.yarr.qilletni" level="info" additivity="false">
        <AppenderRef ref="Console"/>
    </Logger>
    <Root level="info" >
        <AppenderRef ref="Console"/>
    </Root>
</Loggers>
</Configuration>